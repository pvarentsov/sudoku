{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": [
      "./src"
    ],
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/core/*"],
      "@core": ["src/core"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "alwaysStrict": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
